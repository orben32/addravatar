{
  "name": "Addravatar",
  "version": "1.0",
  "content_scripts": [
    {
      "js": [
        "main.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "description": "Easily verify bitcoin address equality by assigning each address an avatar",
  "manifest_version": 2
}